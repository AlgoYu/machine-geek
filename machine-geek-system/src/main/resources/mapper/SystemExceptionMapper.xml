<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.machine.geek.mapper.ISystemExceptionMapper">
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.machine.geek.entity.SystemException">
        <id column="id" property="id" />
        <result column="uri" property="uri" />
        <result column="method" property="method" />
        <result column="parameter" property="parameter" />
        <result column="ip" property="ip" />
        <result column="exception_class" property="exceptionClass" />
        <result column="exception_message" property="exceptionMessage" />
        <result column="create_time" property="createTime" />
    </resultMap>
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        `ip`,`uri`,`method`,`parameter`,`ip`,`exception_class`,`exception_message`,`create_time`
    </sql>
    <!-- 条件查询 -->
    <select id="selectByCondition" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"></include>
        FROM
        system_exception
        <if test='keyWord != null and keyWord != ""'>
            WHERE
            system_exception.`url` LIKE '%${keyWord}%'
            OR
            system_exception.`exception_message` LIKE '%${keyWord}%'
        </if>
    </select>
</mapper>